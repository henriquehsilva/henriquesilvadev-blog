---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

const { image, title = SITE_TITLE, description = SITE_DESCRIPTION, includeSidebar = true, sideBarActiveItemID } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="lofi">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <script>(function(w, d) { w.CollectId = "67e297303b5fcbcbdb786f96"; var h = d.head || d.getElementsByTagName("head")[0]; var s = d.createElement("script"); s.setAttribute("type", "text/javascript"); s.async=true; s.setAttribute("src", "https://collectcdn.com/launcher.js"); h.appendChild(s); })(window, document);</script>
  </head>
  <body style="overflow: hidden;">
    <div class="bg-base-300 drawer drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content bg-base-100" style="background-color: #EDECEA;">
        <!-- <Header title={SITE_TITLE} /> -->
        <!-- <img src="https://henriquesilva.dev/bg-bot.jpeg" alt="background" style="width: 100%; height: 100vh; object-fit: cover;" /> -->
        <img src="https://static.wixstatic.com/media/28cc53_ae4cd4b2ff9b48d99a2f9d258863a0aa~mv2.gif" alt="" style="opacity: 0.6;width: 100%; height: 100vh; object-fit: cover;" data-ssr-src-done="true" fetchpriority="low" loading="lazy" decoding="async">
        <div class="md:flex md:justify-center">
          <main class="p-6 pt-10 lg:max-w-[900px] max-w-[100vw]">
            <slot />            
          </main>
        </div>        
      </div>
      {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} />}
    </div>
  </body>
</html>